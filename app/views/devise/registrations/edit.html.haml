%h2
  Edit #{resource_name.to_s.humanize}
- semantic_form_for resource_name, :html=>{:method=>:put}, :url=>registration_path(resource_name) do |f|
  = devise_error_messages!
  - f.inputs do 
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    = f.input :current_password, :hint=>"We need your current password to confirm changes"
    = f.input :phone
    = f.input :city
    = f.input :state, :input_html=>{:size=>1}
    = f.input :zip, :input_html=>{:size=>3}
  - f.buttons do 
    = f.commit_button :label=>"Submit"

%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
= link_to "Back", :back
